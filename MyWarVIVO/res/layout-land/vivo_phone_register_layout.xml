<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vivo_login_total_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:layout_width="330dip"
            android:layout_height="wrap_content"
            android:background="@drawable/vivo_account_background"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/account_title_layout"
                android:layout_width="match_parent"
                android:layout_height="69dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/titleLeftBtn_layout"
                    android:layout_width="50dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="left|center_vertical" >

                    <ImageView
                        android:id="@+id/titleLeftBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dip"
                        android:src="@drawable/vivo_btn_title_back" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/vivo_logo" />

                    <View
                        android:id="@+id/vivo_line"
                        android:layout_width="2px"
                        android:layout_height="17dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dip"
                        android:layout_marginRight="6dip"
                        android:background="@color/vivo_gray_color" />

                    <TextView
                        android:id="@+id/phone_reg_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/vivo_account_registe_phone"
                        android:textColor="@color/vivo_small_window_title"
                        android:textSize="@dimen/vivo_small_win_title_51px" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginLeft="13dip"
                android:layout_marginRight="13dip"
                android:background="@drawable/edit_layout_bg"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/vivo_phone_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="18dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/vivo_phone_register_icon"
                    android:gravity="center" />

                <View
                    android:layout_width="2px"
                    android:layout_height="29dip"
                    android:layout_gravity="center_vertical"
                    android:background="@color/vivo_gray_color" />

                <com.vivo.sdkplugin.Utils.EditTextErrorFixed
                    android:id="@+id/account_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dip"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/vivo_account_register_phone_label_tip"
                    android:inputType="textNoSuggestions"
                    android:singleLine="true"
                    android:textColor="@color/vivo_text_color_middle"
                    android:textSize="@dimen/vivo_text_size_middle" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="11dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/read_protocol_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="@string/vivo_read_protocol_2"
                    android:textColor="@color/vivo_temp_update_cancel"
                    android:textSize="@dimen/vivo_text_size_small" />
            </RelativeLayout>

            <Button
                android:id="@+id/turn_to_regist2_btn"
                android:layout_width="match_parent"
                android:layout_height="41dip"
                android:layout_marginLeft="13dip"
                android:layout_marginRight="13dip"
                android:layout_marginTop="18dip"
                android:background="@drawable/vivo_feed_commit_btn"
                android:singleLine="true"
                android:text="@string/vivo_next_step"
                android:textColor="@android:color/white"
                android:textSize="@dimen/vivo_text_size_middle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/vivo_registe_email_tips"
                    android:textColor="@color/vivo_sub_notice_left_2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/account_registe_email_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:singleLine="true"
                    android:text="@string/vivo_account_registe_email"
                    android:textColor="@color/vivo_text_color_bg"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dip"
                    android:background="@drawable/vivo_turn_other_register"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>