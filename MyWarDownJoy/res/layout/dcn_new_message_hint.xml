<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dcn_dialog_common_width"
    android:layout_height="wrap_content"
    android:background="@drawable/dcn_shape_black_bg"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dcn_transparent">

        <com.downjoy.widget.vollyextend.CircleNetworkImageView
            android:id="@+id/dcn_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/dcn_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dcn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="当乐活动大使"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dcn_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="当乐活动大使当乐活动大使当乐活动大使当乐活动大使当乐活动大使当乐活动大使当乐活动大使当乐活动大使"
            android:textColor="#fff"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/dcn_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dcn_message_popup_close" />
</LinearLayout>