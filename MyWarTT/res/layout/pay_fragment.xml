        android:id="@+id/pay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.2元"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/pay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.3元"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/pay4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4元"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/pay5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5元"
        android:textSize="18sp"/>

