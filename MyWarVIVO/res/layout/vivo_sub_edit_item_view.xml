<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sub_account_icon"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dip"
            android:background="@drawable/vivo_sub_icon_red" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="40dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/sub_account_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_marginRight="5dip"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="idsssssssssssssssssssss"
                            android:textColor="@color/vivo_black"
                            android:textSize="@dimen/vivo_login_48px" />

                        <TextView
                            android:id="@+id/loginmsg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/sub_account_id"
                            android:layout_gravity="right"
                            android:layout_marginTop="1dip"
                            android:singleLine="true"
                            android:text="一小时前"
                            android:textColor="@color/vivo_sub_account_role"
                            android:textSize="@dimen/vivo_login_33px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/sub_account_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="未获取角色信息"
                            android:textColor="@color/vivo_sub_account_role"
                            android:textSize="@dimen/vivo_login_39px" />

                        <TextView
                            android:id="@+id/sub_account_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:singleLine="true"
                            android:text="角色等级"
                            android:textColor="@color/vivo_sub_account_role"
                            android:textSize="@dimen/vivo_login_39px" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_image"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="13dip"
            android:src="@drawable/vivo_sub_user_select" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vivo_sub_foot_layout"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dip"
            android:background="@drawable/vivo_sub_icon_grey" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/vivo_add_sub_account_des"
                android:textColor="@color/vivo_sub_account_role"
                android:textSize="@dimen/vivo_login_39px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="86dip"
            android:layout_height="28dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dip"
            android:background="@drawable/vivo_switch_sub_btn"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="8dip"
            android:paddingRight="8dip" >

            <ImageView
                android:layout_width="11dip"
                android:layout_height="11dip"
                android:src="@drawable/vivo_sub_add_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:text="@string/vivo_add_sub_btn"
                android:textColor="@color/vivo_sub_notice_left_2"
                android:textSize="@dimen/vivo_login_42px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vivo_foot_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/vivo_sub_divider_line" />

</LinearLayout>