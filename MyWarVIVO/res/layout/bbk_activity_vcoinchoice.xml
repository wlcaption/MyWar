<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget32"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bbk_activity_background_color" >

	<RelativeLayout
        android:id="@+id/bbk_payment_title"
        android:layout_width="match_parent"
        android:layout_height="45dip" 
        android:layout_alignParentTop="true"
        android:background="@color/card_pay_title_bg">
        <ImageView  android:id="@+id/title_back"
        android:layout_width="@dimen/bbk_title_back_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:src="@drawable/vivo_btn_title_back"
        android:clickable="true"/>
    	<LinearLayout 
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:orientation="horizontal">
    	    <TextView
        		android:id="@+id/title_left"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:singleLine="true"
        		android:textSize="@dimen/bbk_title_textsize" 
        		android:textColor="@color/TextColorBlack"/>
    	    <ImageView 
        		android:layout_width="@dimen/bbk_title_divider_width"
        		android:layout_height="@dimen/bbk_title_divider_height"
        		android:layout_marginLeft="@dimen/bbk_title_divider_maginLeftRight"
        		android:layout_marginRight="@dimen/bbk_title_divider_maginLeftRight"
        		android:layout_gravity="center_vertical"
        		android:background="@drawable/bbk_title_divider"/>
    	    <TextView
        		android:id="@+id/title_right"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:singleLine="true"
        		android:textSize="@dimen/bbk_title_textsize" 
        		android:textColor="@color/TextColorBlack"/>
    	</LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/widget40"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bbk_payment_title"
        android:layout_marginLeft="@dimen/bbk_rechargeamount_margin_left_right"
        android:layout_marginRight="@dimen/bbk_rechargeamount_margin_left_right"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bbk_vcoin_change"
            android:textColor="@color/bbk_listitem_textcolor"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bbk_vcoin_choice_convert"
            android:textColor="@color/bbk_channel_activity_desc_textcolor"
            android:textSize="@dimen/ticket_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dip"
        android:layout_marginLeft="@dimen/bbk_rechargeamount_margin_left_right"
        android:layout_marginRight="@dimen/bbk_rechargeamount_margin_left_right"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/widget40" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        <TextView
            android:id="@+id/widget10"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bbk_rechargeamount_text_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bbk_bg_north_west_round"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/bbk_vcoin_1"
            android:textSize="@dimen/bbk_vcoin_choice_amount_textsize"
            android:textColor="@color/bbk_rechargeamount_text_color" />
            </LinearLayout>        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        <TextView
            android:id="@+id/widget50"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bbk_rechargeamount_text_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/widget10"
            android:background="@drawable/bbk_bg_all_squre_top"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/bbk_vcoin_3"
            android:textSize="@dimen/bbk_vcoin_choice_amount_textsize"
            android:textColor="@color/bbk_rechargeamount_text_color" />
          </LinearLayout>  
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        <TextView
            android:id="@+id/widget100"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bbk_rechargeamount_text_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/widget50"
            android:background="@drawable/bbk_bg_north_east_round"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/bbk_vcoin_4"
            android:textSize="@dimen/bbk_vcoin_choice_amount_textsize"
            android:textColor="@color/bbk_rechargeamount_text_color" />
        </LinearLayout>    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_layout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bbk_rechargeamount_margin_left_right"
        android:layout_marginRight="@dimen/bbk_rechargeamount_margin_left_right"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/widget_layout1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/widget500"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/bbk_rechargeamount_text_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bbk_bg_south_west_round"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/bbk_vcoin_7"
                android:textSize="@dimen/bbk_vcoin_choice_amount_textsize"
                android:textColor="@color/bbk_rechargeamount_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/widget1000"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/bbk_rechargeamount_text_height"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bbk_bg_all_squre_bottom"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/bbk_vcoin_8"
                android:textSize="@dimen/bbk_vcoin_choice_amount_textsize"
                android:textColor="@color/bbk_rechargeamount_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/widget2000"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/bbk_rechargeamount_text_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bbk_bg_south_east_round"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/bbk_vcoin_9"
                android:textSize="@dimen/bbk_vcoin_choice_amount_textsize"
                android:textColor="@color/bbk_rechargeamount_text_color" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputamount_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/widget_layout3"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="@dimen/bbk_rechargeamount_margin_left_right"
        android:layout_marginRight="@dimen/bbk_rechargeamount_margin_left_right"
        android:background="@drawable/bbk_card_input_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dip"
            android:text="@string/bbk_vcoin_amount"
            android:textSize="@dimen/bbk_rechargeamount_text_size"
            android:textColor="@color/bbk_channel_activity_desc_textcolor"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <EditText
                android:id="@+id/inputamountedittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bbk_rechargeamount_margin_left_right"
                android:background="@null"
                android:hint="@string/bbk_vcoin_limit"
                android:numeric="decimal"
                android:singleLine="true"
                android:textColor="@color/bbk_title_textcolor"
                android:textColorHint="@color/bbk_channel_activity_desc_textcolor"
                android:maxLength="7"
                android:textSize="@dimen/bbk_rechargeamount_text_size" />
        </ScrollView>
    </LinearLayout>
	<TextView 
	    android:id="@+id/tips_msgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputamount_layout"
        android:layout_marginTop="@dimen/bbk_vcoinchoice_tipsmsg_marginTop"
        android:paddingLeft="@dimen/bbk_rechargeamount_margin_left_right"
        android:paddingRight="@dimen/bbk_rechargeamount_margin_left_right"
        android:lineSpacingExtra="3dip"
        android:text="@string/bbk_vcoin_choice_tips_msgs"
        android:textColor="@color/bbk_channel_activity_desc_textcolor"
        android:textSize="@dimen/bbk_rechargeamount_text_tip"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/layout_submit_game_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/submit_game_card"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bbk_btn_submit_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/bbk_rechargebtn_margin_bottom"
            android:layout_marginLeft="@dimen/bbk_rechargeamount_margin_left_right"
            android:layout_marginRight="@dimen/bbk_rechargeamount_margin_left_right"
            android:background="@drawable/bbk_btn_default"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/bbk_vcoin_card_pay"
            android:textColor="@color/bbk_btn_submit_textcolor"
            android:textSize="@dimen/text_size_middle" />
    </RelativeLayout>

</RelativeLayout>